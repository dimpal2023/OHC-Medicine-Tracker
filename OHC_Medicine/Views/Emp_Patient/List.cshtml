@using OHCModel.Model

@model Emp_PatientModel
@{
    ViewBag.Title = "Employee Cum Patient List";
    int i = 0;
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Employee Cum Patient List</h3>
        <div class="d-flex">
            <a href="@Url.Action("Create", "Emp_Patient")" type="button" class="btn btn-sm ml-3 btn-success"> Add New Employee Cum Patient </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Employee Cum Patient List</h4>
                    <div class="table-responsive">
                        <table class="table table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>SR No.</th>


                                    @*<th>Employee Id</th>*@
                                    <th>Employee Name</th>
                                    <th>Employee Code</th>
                                    <th>Dob</th>
                                    <th>Address</th>
                                    <th>Employee Type</th>
                                    <th>Status</th>
                                    @*<th>CreatedDate</th>
                                    <th>CreatedBy</th>
                                    <th>UpdatedDate</th>
                                    <th>UpdatedBy</th>*@

                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var data in Model._Emp_PatientList)
                                {
                                    <tr>
                                        <td class="py-1">@(++i)</td>

                                        @*<td>@data.EmployeeId</td>*@
                                        <td>@data.EmployeeName</td>
                                        <td>@data.EmployeeCode</td>
                                        <td>@data.Dob</td>
                                        <td>@data.Address</td>
                                        <td>@data.EmployeeType</td>
                                        @if (@data.IsActive == "Active")
                                        {
                                            <td> <label class="badge badge-info">@data.IsActive</label> </td>
                                        }
                                        else
                                        {
                                            <td> <label class="badge badge-danger">@data.IsActive</label> </td>
                                        }
                                        <td class="textcenter">
                                            <a href="@Url.Action("Edit", "Emp_Patient", new { ID = @data.EmployeeId })" class="btn btn-primary" title="Edit"><span class="mdi mdi-table-edit"></span></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>