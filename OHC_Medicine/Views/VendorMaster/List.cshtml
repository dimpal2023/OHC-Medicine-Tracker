@using OHCModel.Model

@model VendorMasterModel
@{
    ViewBag.Title = "Vendor List";
    int i = 0;
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Vendor List</h3>
        <div class="d-flex">
            <a href="@Url.Action("Create", "VendorMaster")" type="button" class="btn btn-sm ml-3 btn-success"> Add New Vendor </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Vendor List</h4>
                    <div class="table-responsive">
                        <table class="table table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>SR No.</th>
                                    <th>Vendor Name</th>
                                    <th>Address</th>
                                    <th>License No.</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var data in Model._VendorMasterList)
                                {
                                    <tr>
                                        <td class="py-1">@(++i)</td>
                                        <td>@data.VendorName</td>
                                        <td>@data.Address</td>
                                        <td>@data.LicenseNo</td>
                                        @if (@data.IsActive == "Active")
                                        {
                                            <td> <label class="badge badge-info">@data.IsActive</label> </td>
                                        }
                                        else
                                        {
                                            <td> <label class="badge badge-danger">@data.IsActive</label> </td>
                                        }
                                        <td class="textcenter">
                                            <a href="@Url.Action("Edit", "VendorMaster", new { ID = @data.VendorId })" class="btn btn-primary" title="Edit"><span class="mdi mdi-table-edit"></span></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>