@using OHCModel.Model
@model MedicineIssuancetootherunitfirstaddModel
@{
    ViewBag.Title = "Medicine Issuance to other unit first aid";
    int i = 0;
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Medicine Issuance to other unit first aid</h3>
        <div class="d-flex">
            <a href="/MedicineIssuancetootherunitfirstadd/Create?ID=0" type="button" class="btn btn-sm ml-3 btn-success"> Add New Medicine Issuance</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Medicine Issuance to other unit first aid</h4>
                    <div class="table-responsive">
                        <table class="table table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>SR No.</th>
                                    <th>Unit Name</th>
                                    <th>Department Name</th>
                                    <th>Issue Date</th>
                                    
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model._MedicineIssuanceList != null)
                                {
                                    foreach (var data in Model._MedicineIssuanceList)
                                    {
                                        <tr>
                                            <td class="py-1">@(++i)</td>
                                            <td>@data.Unit</td>
                                            
                                            <td>@data.DepartmentName</td>
                                            <td>@data.IssueDate</td>
                                       
                                            <td class="textcenter">
                                                <a href="@Url.Action("Edit", "MedicineIssuancetootherunitfirstadd", new { ID = @data.MedicineIssuanceID })" class="btn btn-primary" title="Edit"><span class="mdi mdi-table-edit"></span></a>
                                            </td>
                                        </tr>
                                    }
                                }
                                @*else
                                {<tr>
                                    "No Data Available";</tr>
                                }*@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
