@using OHCModel.Model
@*@model DepartmentMasterModel*@
@model UserMasterModel
@{
    ViewBag.Title = "user List";
    int i = 0;
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">User List</h3>
        <div class="d-flex">
            <a href="@Url.Action("Create", "UserMaster")" type="button" class="btn btn-sm ml-3 btn-success"> Add New User </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User List</h4>
                    <div class="table-responsive">
                        <table class="table table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>SR No.</th>
                                    <th>User Name</th>
                                    <th>Password</th>
                                    <th>Email</th>
                                    <th>Employee Code</th>
                                    <th>Department</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*_DepartmentMasterModelList*@
                                @foreach (var data in Model._UserMasterModelList)
                                {
                                <tr>
                                    <td class="py-1">@(++i)</td>
                                    <td>@data.UserName</td>
                                    <td>@data.Password</td>
                                    <td>@data.Email</td>
                                    <td>@data.EmployeeCode</td>
                                    <td>@data.Department</td>
                                    @if (@data.IsActive == "Active")
                                    {
                                        <td> <label class="badge badge-info">@data.IsActive</label> </td>
                                    }
                                    else
                                    {
                                        <td> <label class="badge badge-danger">@data.IsActive</label> </td>
                                    }
                                    
                                    <td class="textcenter">
                                        <a href="@Url.Action("Edit", "UserMaster", new { ID = @data.UserId })" class="btn btn-primary" title="Edit"><span class="mdi mdi-table-edit"></span></a>
                                    </td>
                                </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
