@using OHCModel.Model
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>OTP</title>
        <link rel="shortcut icon" type="image/png" href="../../img/Karam.png" />
        <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Content/css/bootstrap-responsive.min.css" />
        <link rel="stylesheet" href="~/Content/css/maruti-login.css" />
    </head>
    <body>
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">OTP</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"></a></li>
                        <li class="breadcrumb-item active" aria-current="page"> OTP</li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">OTP</h4>
                            <p class="card-description">&nbsp;</p>




                            <div id="loginbox">
                                @using (Html.BeginForm("OTP", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <form id="recoverform" action="#" class="form-vertical">
                                        <p class="normal_text">Please enter your otp that is send on your e-mail</p>

                                        @*<div class="controls">
                                        <div class="main_input_box">
                                            <span class="add-on"><i class="icon-envelope"></i></span>*@
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <div class="form-group">

                                                    @Html.TextBoxFor(m => m.OTP, new { @Placeholder = "OTP", @class = "form-control", @autocomplete = "off", @id = "txtOtp" })

                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            @*<span class="pull-left"><a href="~/Account/Index" class="flip-link btn btn-inverse" id="to-login">&laquo; Back to login</a></span>*@
                                            @*<span class="pull-right"><input type="submit" class="btn btn-info" value="Recover" /></span>*@
                                            <span class="pull-right btnotpSubmit"><button type="submit" class="btn btn-info">Reset</button></span>
                                        </div>
                                        <span class="text-center errormsg" style="color:red;text-align:center;margin-left:5%"> @Html.Raw(@ViewBag.Message)</span>
                                    </form>

                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>


            </div>





            <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css" />
            <link rel="stylesheet" href="~/assets/vendors/flag-icon-css/css/flag-icon.min.css" />
            <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css" />
            <link rel="stylesheet" href="~/assets/vendors/select2/select2.min.css" />
            <link rel="stylesheet" href="~/assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css" />
            <link rel="stylesheet" href="~/assets/css/style.css" />



            <script src="~/Content/js/jquery.min.js"></script>
            <script src="~/Content/js/maruti.login.js"></script>
            <script>
                $('.btnotpSubmit').click(function () {

                    if ($("#txtOtp").val() == '' || $("#txtOtp").val() == null) {
                        $(".errormsg").text("");
                        $(".errormsg").text("Please Enter Otp.");
                        return false;
                    }
                });
            </script>
    </body>
    </html>
