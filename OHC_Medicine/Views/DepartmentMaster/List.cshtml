@using OHCModel.Model
@model DepartmentMasterModel
@{
    ViewBag.Title = "Department List";
    int i = 0;
}
<style>
    .sweet-alert .sa-icon.sa-warning {
        border-color: #F8BB86;
        left: 10px;
    }
</style>
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Department List</h3>
        <div class="d-flex">
            <a href="@Url.Action("Create", "DepartmentMaster")" type="button" class="btn btn-sm ml-3 btn-success"> Add New Department </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Department List</h4>
                    <div class="table-responsive">
                        <table class="table table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>SR No.</th>
                                    <th>Unit</th>
                                    <th>Department Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model._DepartmentMasterModelList)
                                {
                                    <tr>
                                        <td class="py-1">@(++i)</td>
                                        <td class="py-1">@data.Unit</td>
                                        <td>@data.DepartmentName</td>
                                        @if (@data.Status == "Active")
                                        {
                                            <td> <label class="badge badge-info">@data.Status</label> </td>
                                        }
                                        else
                                        {
                                            <td> <label class="badge badge-danger">@data.Status</label> </td>
                                        }
                                        <td class="textcenter">
                                            <a href="@Url.Action("Edit", "DepartmentMaster", new { ID = @data.Id })" class="btn btn-primary" title="Edit"><span class="mdi mdi-table-edit"></span></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
