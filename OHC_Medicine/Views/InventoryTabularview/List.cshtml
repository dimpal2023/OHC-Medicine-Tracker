@using OHCModel.Model
@model InventoryTabularViewModel
@{
    ViewBag.Title = "Inventory Tabular view";
    int i = 0;
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Inventory Tabular view</h3>
        @*<div class="d-flex">
                <a href="@Url.Action("Create", "InventoryTabularview")" type="button" class="btn btn-sm ml-3 btn-success"> Add New Medicine </a>
            </div>*@
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Inventory Tabular view List</h4>
                    <div class="table-responsive">
                        <table class="table table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>SN No.</th>
                                    <th>Medicine Name</th>
                                    <th>Total Purchase</th>
                                    <th>Total Issue</th>
                                    <th>Balance (Total)</th>
                                    @*<th>Action</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model._inventoryTabularViewlist != null)
                                {
                                    foreach (var data in Model._inventoryTabularViewlist)
                                    {
                                        <tr>
                                            <td class="py-1">@(++i)</td>
                                            <td>@data.MedicineName</td>
                                            <td>@data.TotlaPurchase</td>
                                            <td> @data.TotlaIssue</td>
                                            <td>@data.Balance</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr ><td colspan="5">No data found.e</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
